/*

Conditions for an year to be a leap year

1. Divisible by 4
2. Divisible by 400
3. Not Divisible by 100

*/

#include <stdio.h>

int main() {
    
    int year;
    
    printf("Enter your year\n");
    scanf("%d", &year);
    
    if(year%4==0 && year%400==0 || !(year%100==0)) {
        
        printf("this is a leap year\n");
        
        
    }
    
    else {
        
        printf("%d is not a leap year");
        
    }
    return 0;
    
}
